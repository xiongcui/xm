.top {
  position: relative;
}

.avatar {
  margin-top: 60rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
}

.avatar image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.avatar_select image {
  width: 120rpx;
  height: 80rpx;
}

.avatar_select {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  margin-top: -60rpx;
}

.no_avatar {
  background-image: url("https://yuepai-oss.qubeitech.com/static/images/avatar_default.png");
  background-size: 100% 100%;
}

.infor,
.savebtn {
  padding: 0 60rpx;
}

.infor {
  width: 100%;
  height: 50vh;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
}

.item {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  height: 90rpx;
  border-bottom: 1rpx solid #f1f1f1;
  margin-bottom: 16rpx;
}

.item_label {
  width: 120rpx;
  color: #333333;
}

.item_input {
  color: #818181;
  height: 100%;
  width: 74%;
}

.item_input input,
.item_input .picker {
  height: 100%;
}

.picker_children {
  height: 90rpx;
  line-height: 90rpx;
}

.item_input image {
  width: 120rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

.savebox {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
}

.save-btn {
  border-radius: 40rpx;
  width: 90%;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  color: #ffffff;
  background-color: #ff5355;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.skip-btn {
  position: absolute;
  left: 30rpx;
  top: -44rpx;
  color: rgba(0, 0, 0, 0.3);
  font-size: 30rpx;
}
