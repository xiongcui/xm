.login {
  height: 100vh;
}

.login-top {
  padding-top: 20%;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}

.login-top .logo-img {
  width: 150rpx;
  height: 150rpx;
}

.login-top .desc {
  color: #ff5355;
  font-size: 30rpx;
  margin: 30rpx 0;
}

.login-top .small-desc {
  color: #ff5355;
  font-size: 30rpx;
  opacity: 0.5;
}

.login-bottom {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  height: 50vh;
}

.login-btn,
.phone-btn,
.avatar-btn,
.nickname-btn,
.finish-btn {
  border-radius: 40rpx;
  width: 90%;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  color: #ffffff;
  background-color: #ff5355;
  position: relative;
}

.nickname-input {
  position: absolute;
  left: 0;
  right: 0;
}

.cancel-btn {
  margin-top: 30rpx;
  border-radius: 40rpx;
  width: 90%;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  color: #333333;
  background-color: #ffffff;
}

.login-tips {
  position: absolute;
  bottom: 8%;
  font-size: 20rpx;
  color: #c0c0c0;
}

.user-xy {
  color: #1c63a4;
}

.user_infor {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  height: 30vh;
}

.user_avatar image {
  width: 220rpx;
  height: 220rpx;
}

.get_phone,
.get_avatar,
.get_nickname,
.get_finish {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  padding: 30rpx 16rpx;
}

.user_name {
  color: #b1b1b1;
}

.login-modal {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}

.login-modal .login-box {
  background: #ffffff;
  width: 500rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}

.login-modal .login-box .login-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 16rpx;
}

.login-modal .login-box .login-txt {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
  text-align: center;
  margin-bottom: 30rpx;
}

.login-modal .login-box .phone {
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.5);
  margin: 16rpx 0;
}

.login-modal .login-box .avatar-wrapper {
  background: transparent;
  display: inline-block;
  padding: 0;
  margin: 0;
}

.login-modal .login-box .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.login-modal .login-box .login-head {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

.login-modal .login-box .weui-input {
  margin-left: 16rpx;
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
}
