page {
  background-color: #f4f4f4;
}

.release-box {
  height: 100vh;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column-reverse;
      -ms-flex-direction: column-reverse;
          flex-direction: column-reverse;
}

.release-box .release-title {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.release-box .release-content {
  background: #ffffff;
  padding: 30rpx 0 30rpx 30rpx;
  margin-bottom: 16rpx;
  border-radius: 30rpx 30rpx 0 0;
}

.release-box .release-list {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
}

.release-box .release-list .release-item {
  padding: 30rpx 30rpx 0 30rpx;
  border-radius: 16rpx;
  color: #ffffff;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  margin-right: 30rpx;
}

.release-box .release-list .release-sub-title {
  font-size: 32rpx;
  font-weight: bold;
}

.release-box .release-list .release-img {
  text-align: right;
}

.release-box .release-list .release-img image {
  width: 76rpx;
  height: 76rpx;
}

.release-box .release-list .bgcolor1 {
  background: #ff7946;
}

.release-box .release-list .bgcolor2 {
  background: #ff284e;
}
