.appointment {
  padding: 65rpx 0;
  height: calc(100vh - 130rpx);
  background-color: #f7f7f7;
}
.appointment .select-list {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
  padding: 16rpx 0 16rpx 16rpx;
}
.appointment .select-item {
  width: 344rpx;
  padding: 16rpx 0;
  background: #ffffff;
  margin-right: 20rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  border-radius: 4rpx;
  -webkit-box-shadow: 0 -1rpx 8rpx 0 rgba(0, 0, 0, 0.02);
          box-shadow: 0 -1rpx 8rpx 0 rgba(0, 0, 0, 0.02);
  margin-bottom: 16rpx;
}
.appointment .select-item image {
  width: 84rpx;
  height: 84rpx;
  margin: 0 30rpx;
}
.appointment .select-item text {
  font-size: 30rpx;
}
