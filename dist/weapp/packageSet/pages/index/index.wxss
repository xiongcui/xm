page {
  background-color: #f7f7f7;
}

.set .set-top,
.set .set-content,
.set .set-bt,
.set .set-logout {
  background: #ffffff;
  margin: 16rpx 0;
}

.set .set-item {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  position: relative;
  height: 80rpx;
  border-bottom: 2rpx solid #f5f5f5;
  font-size: 30rpx;
  padding: 0 30rpx;
  color: #333333;
}

.set .phone {
  color: rgba(0, 0, 0, 0.5);
  margin-right: 16rpx;
}

.set .arrow image {
  width: 26rpx;
  height: 26rpx;
}

.set .arrow {
  float: right;
  position: absolute;
  right: 30rpx;
}

.set .logout {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  color: rgba(0, 0, 0, 0.5);
}
