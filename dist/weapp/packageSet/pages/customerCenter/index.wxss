page {
  background-color: #f7f7f7;
}

.customer .customer-top {
  margin: 16rpx;
  padding: 30rpx;
  border-radius: 8rpx;
  background: #ffffff url("https://yuepai-oss.qubeitech.com/static/images/common/icon_kefu.png") 580rpx center no-repeat;
  background-size: 100rpx;
  color: rgba(0, 0, 0, 0.5);
}

.customer .customer-title {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333333;
}

.customer .customer-btn {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  background: #ffffff;
  border-radius: 8rpx;
  margin: 16rpx;
  padding: 30rpx;
  color: #333333;
  -webkit-justify-content: space-evenly;
      -ms-flex-pack: space-evenly;
          justify-content: space-evenly;
}

.customer .customer-btn-box {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  text-align: center;
}

.customer .customer-btn-box image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 6rpx;
  margin: 0 auto;
}

.customer .customer-question {
  background: #ffffff;
  border-radius: 8rpx;
  margin: 16rpx;
  padding: 30rpx;
}

.customer .customer-nav {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
}

.customer .customer-nav text {
  color: #333333;
  font-size: 30rpx;
}

.customer .customer-nav .active {
  font-weight: bold;
}

.customer .customer-list {
  padding: 30rpx 0;
}

.customer .customer-list .customer-item {
  position: relative;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  color: #333333;
  font-size: 30rpx;
}

.customer .customer-list .customer-img {
  width: 12rpx;
  height: 24rpx;
  position: absolute;
  right: 0;
  top: 32rpx;
}

.customer .customer-list .customer-content {
  margin: 16rpx 0;
  line-height: 36rpx;
  padding: 16rpx;
  background-color: #f7f7f7;
  color: rgba(0, 0, 0, 0.5);
}

.customer .customer-list .customer-rotate {
  -webkit-transform: rotate(90deg);
      -ms-transform: rotate(90deg);
          transform: rotate(90deg);
}
