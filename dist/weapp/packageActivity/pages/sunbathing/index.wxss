page {
  background-color: #f4f4f4;
}

.sunbathing {
  background: #ffffff;
  margin: 16rpx;
  padding: 16rpx;
}

.sunbathing .input-placeholder,
.sunbathing .textarea-placeholder {
  font-size: 28rpx;
}

.sunbathing .sunbathing-desc {
  background: #f7f7f7;
  width: calc(100% - 32rpx);
  padding: 16rpx;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.sunbathing .sunbathing-label {
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}

.sunbathing .sunbathing-item {
  margin-bottom: 16rpx;
}

.sunbathing .works-upload {
  padding: 28rpx 0;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
}

.sunbathing .works-upload-img,
.sunbathing .works-upload-video {
  width: 158rpx;
  height: 158rpx;
  margin-right: 10rpx;
  background-color: #f7f7f7;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  margin-bottom: 16rpx;
  position: relative;
}

.sunbathing .upload-width {
  width: 100%;
  height: 100%;
}

.sunbathing .upload-video-width {
  width: 400rpx;
}

.sunbathing .upload-img,
.sunbathing .upload-video {
  width: 40rpx;
  height: 36rpx;
}

.sunbathing .upload-txt {
  color: #c7c7c7;
  font-size: 26rpx;
}

.sunbathing .works-upload-list {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
}

.sunbathing .upload-close {
  width: 38rpx;
  height: 38rpx;
  background: url("https://yuepai-oss.qubeitech.com/static/images/common/x_icon.png") no-repeat rgba(0, 0, 0, 0.55);
  background-size: 38rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.sunbathing .works-btn {
  width: calc(100% - 32rpx);
  position: fixed;
  bottom: 0;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  padding: 16rpx 0 50rpx 0;
  z-index: 9;
}

.sunbathing .works-btn .release {
  width: 90%;
  height: 68rpx;
  line-height: 68rpx;
  background-color: #fe3e3f;
  color: #ffffff;
  text-align: center;
  border-radius: 33rpx;
  font-size: 28rpx;
}
