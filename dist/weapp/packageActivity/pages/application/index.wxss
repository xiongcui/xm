}

.application .reduction {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
}

.application .application-fixed-rt {
  background: #ff1e3e;
  color: #ffffff;
  height: 60rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  width: 200rpx;
