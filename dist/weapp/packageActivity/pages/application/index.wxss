page {
  background-color: #f4f4f4;
}

.application .application-info {
  background: #ffffff;
  border-radius: 8rpx;
  margin: 16rpx;
  padding: 0 16rpx;
}

.application .application-title {
  line-height: 34rpx;
  color: #333333;
  font-weight: bold;
  font-size: 32rpx;
  padding: 30rpx 0 16rpx 0;
}

.application .application-bt {
  position: relative;
}

.application .application-bt image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 16rpx;
}

.application .application-loction,
.application .application-time {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
  margin-bottom: 6rpx;
}

.application .application-price {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 28rpx;
  color: #ff1e3e;
}

.application .application-price .price {
  font-size: 36rpx;
  font-weight: bold;
}

.application .application-info-top {
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom: 10rpx;
}

.application .application-info-bt {
  padding-bottom: 14rpx;
}

.application .input-placeholder,
.application .textarea-placeholder {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
}

.application .application-item {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  margin: 16rpx 0;
}

.application .application-item .application-label {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  font-size: 30rpx;
  color: #333333;
}

.application .application-item .application-content-none {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
}

.application .application-item .application-content {
  font-size: 28rpx;
  color: #333333;
}

.application .application-item .message {
  width: 78%;
  text-align: right;
}

.application .application-tag {
  font-size: 22rpx;
  color: #ff1e3e;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
  border: 1rpx solid #ff1e3e;
  margin-left: 16rpx;
}

.application .application-cost {
  background: #ffffff;
  border-radius: 8rpx;
  margin: 16rpx;
  padding: 16rpx;
}

.application .application-split {
  border-bottom: 1rpx solid #e5e5e5;
}

.application .blod {
  font-weight: bold;
}

.application .price-style {
  color: #ff1e3e !important;
  font-weight: bold;
}

.application .payment {
  background: #ffffff;
  border-radius: 8rpx;
  margin: 16rpx;
  padding: 16rpx;
}

.application .check_box {
  color: #999;
  font-size: 26rpx;
  padding-left: 16rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}

.application .check_box_ed {
  color: #333;
}

.application .check_box image {
  height: 26rpx;
  padding-left: 16rpx;
  vertical-align: middle;
  width: 26rpx;
}

.application .balance {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.5);
  margin-left: 16rpx;
}

.application .application-fixed {
  background: #ffffff;
  display: -webkit-flex;
  display: -ms-flexbox;
