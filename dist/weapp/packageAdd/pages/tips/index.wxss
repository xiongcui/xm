.tips {
  background: #ffffff;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  height: 100vh;
  text-align: center;
  color: #333333;
}
.tips .tips-sucess,
.tips .tips-fail {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
}
.tips .tips-img {
  width: 200rpx;
  height: 200rpx;
}
.tips .tips-title {
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}
.tips .tips-btn {
  background: #26b248;
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  width: 100rpx;
  color: #ffffff;
  border-radius: 8rpx;
  margin-top: 16rpx;
}
.tips .toptip {
  background-color: #fff9ed;
  padding: 18rpx 0;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 99;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.tips .toptip_icon {
  height: 36rpx;
  margin: 0 16rpx 0 23rpx;
  width: 36rpx;
}
.tips .toptip_text {
  color: #ff1e3e;
  display: -webkit-box;
  font-size: 24rpx;
  line-height: 40rpx;
  padding-right: 16rpx;
}
.tips .warning {
  width: 72rpx;
  height: 62rpx;
  margin: 0 10rpx;
}
.tips .toptip_btn {
  border: 2rpx solid #ff6010;
  border-radius: 20rpx;
  color: #ff6010;
  font-size: 24rpx;
  height: 38rpx;
  line-height: 38rpx;
  margin-right: 32rpx;
  text-align: center;
  width: 102rpx;
  position: absolute;
  right: 0;
}
