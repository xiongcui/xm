page {
  background-color: #f7f8fa;
}

.main,
page {
  height: 100%;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
}

.item_add {
  background: #fff;
  border-radius: 10rpx;
  color: #2f2f2f;
  font-size: 26rpx;
  font-weight: 400;
  height: 84rpx;
  line-height: 84rpx;
  margin: 20rpx auto 0;
  text-align: center;
  width: 710rpx;
}

.item_add image {
  height: 25rpx;
  margin: -6rpx 15rpx 0 0;
  vertical-align: middle;
  width: 25rpx;
}

.item {
  background: #ffffff;
  padding: 16rpx;
  margin: 16rpx 16rpx 0 16rpx;
  border-radius: 8rpx;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
}

.item .item_name,
.item .item_fanscount {
  color: #333333;
  font-size: 30rpx;
  margin-left: 16rpx;
}

.item .item_name {
  margin-top: 6rpx;
}

.item .editbtn {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.item_tags {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  color: rgba(0, 0, 0, 0.4);
  font-size: 28rpx;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 16rpx;
}

.item_main {
  width: 100%;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  position: relative;
}

.item_logo image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.item_status_fail {
  color: #ff1e3e;
}

.item_status_sucess {
  color: #07c160;
}

.item_active {
  border: 1rpx solid #ff1e3e;
}
