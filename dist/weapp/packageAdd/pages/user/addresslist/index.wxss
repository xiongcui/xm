page {
  background-color: #f7f8fa;
}

.main,
page {
  height: 100%;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
}

.item {
  background-color: #fff;
  border-radius: 10rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  margin: 20rpx auto 0;
  padding: 20rpx 30rpx;
  width: 710rpx;
}

.address_info {
  width: 552rpx;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
}

.info_icon {
  padding: 9rpx 0;
}

.info_icon .icon_text {
  background-color: #ff1e3e;
  color: #fff;
  font-size: 18rpx;
  height: 24rpx;
  line-height: 24rpx;
  margin-right: 8rpx;
  text-align: center;
  width: 50rpx;
}

.info_title {
  padding-bottom: 10rpx;
}

.info_name {
  color: #2f2f2f;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 42rpx;
  padding-right: 20rpx;
}

.info_phone {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
}

.info_address {
  color: #2f2f2f;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 33rpx;
  width: 552rpx;
  word-break: break-all;
}

.edit_btn {
  padding: 0 0 0 50rpx;
}

.edit_btn image {
  height: 48rpx;
  width: 48rpx;
}

.add_address {
  background: #fff;
  border-radius: 10rpx;
  color: #2f2f2f;
  font-size: 26rpx;
  font-weight: 400;
  height: 84rpx;
  line-height: 84rpx;
  margin: 20rpx auto 0;
  text-align: center;
  width: 710rpx;
}

.add_address image {
  height: 25rpx;
  margin: -6rpx 15rpx 0 0;
  vertical-align: middle;
  width: 25rpx;
}
