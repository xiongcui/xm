page {
  background-color: #f4f4f4;
}

.invite {
  text-align: center;
}

.invite .invite-top {
  font-size: 26rpx;
  color: #333333;
  padding: 16rpx;
}

.invite .invite-list,
.invite .invite-top {
  background: #ffffff;
  margin: 16rpx;
  border-radius: 8rpx;
}

.invite .invite-list-title {
  margin: 16rpx auto;
  font-size: 32rpx;
  color: #333333;
}

.invite .invite-p {
  padding: 16rpx 30rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  color: rgba(0, 0, 0, 0.5);
}

.invite .invite-item {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.5);
}

.invite .blod {
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
}

.invite .none-data {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding-top: 180rpx;
  color: #333;
}

.invite .none-img {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 16rpx;
}
