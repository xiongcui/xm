.guide-box image {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 16rpx;
}

.guide-box .guide-txt {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
  margin-bottom: 16rpx;
  padding: 0 30rpx;
}

.guide-box .guide-btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  color: #fe5457;
  border: 2rpx solid #fe5457;
  border-radius: 30rpx;
}
