page {
  background-color: #f4f4f4;
}

.withdrawal {
  margin: 16rpx;
}

.withdrawal .withdrawal-box {
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  padding: 30rpx;
}

.withdrawal .withdrawal-title {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}

.withdrawal .withdrawal-lable-blod {
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}

.withdrawal .withdrawal-tips {
  font-size: 24rpx;
  margin-left: 16rpx;
  color: #c8c8c8;
}

.withdrawal .withdrawal-select {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding-left: 30rpx;
  margin-top: 16rpx;
}

.withdrawal .withdrawal-select .withdrawal-lable {
  color: #333333;
  font-size: 28rpx;
}

.withdrawal .withdrawal-select image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
}

.withdrawal .withdrawal-input {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

.withdrawal .withdrawal-input .unit {
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
  margin-right: 16rpx;
}

.withdrawal .withdrawal-input .withdrawal-blance {
  font-size: 30rpx;
  color: #333333;
}

.withdrawal .withdrawal-blance-tips {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  margin-top: 16rpx;
}

.withdrawal .blance-tips {
  font-size: 24rpx;
  margin-right: 16rpx;
  color: #c8c8c8;
}

.withdrawal .full-withdrawal {
  font-size: 24rpx;
  color: #2980fc;
}

.withdrawal .immediate-withdrawal {
  width: calc(100% - 32rpx);
  position: fixed;
  bottom: 0;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  padding: 16rpx 0 50rpx 0;
  z-index: 9;
}

.withdrawal .immediate-withdrawal .submit {
  width: 90%;
  height: 78rpx;
  line-height: 78rpx;
  background-color: #fe3e3f;
  color: #ffffff;
  text-align: center;
  border-radius: 39rpx;
  font-size: 28rpx;
}
