@charset "UTF-8";
page {
  background-color: #f4f4f4;
}
.growth-guide .growth-guide-box {
  background: #ffffff;
  border-radius: 8rpx;
  margin: 16rpx;
  padding: 30rpx;
}
.growth-guide .growth-guide-title {
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 16rpx;
  text-align: center;
  font-weight: bold;
}
.growth-guide .growth-guide-txt {
  font-size: 28rpx;
  color: #333333;
  line-height: 36rpx;
}
.growth-guide .table-box {
  height: 100%;
  overflow-x: auto;
  margin: 30rpx 0;
  background: #fff;
  border-radius: 16rpx;
}
.growth-guide .table {
  border-radius: 8rpx;
  margin: 0 auto;
  display: table;
  table-layout: fixed;
  border-collapse: collapse;
  overflow-x: auto;
  background-color: #ffffff;
  border-radius: 16rpx;
  font-size: 26rpx;
}
.growth-guide .tr {
  display: table-row;
}
.growth-guide .th {
  display: table-cell;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 2rpx solid #f3f4f7;
  border-right: none;
  border-bottom: none;
  padding: 0 30rpx;
  color: #333333;
  white-space: nowrap;
  font-weight: bold;
}
.growth-guide .td {
  padding: 0 10rpx;
  display: table-cell;
  height: 60rpx;
  vertical-align: middle;
  text-align: center;
  border: 2rpx solid #f3f4f7;
  border-right: none;
}
.growth-guide .th:first-child,
.growth-guide .td:first-child {
  position: -webkit-sticky;
  position: sticky;
  left: -2rpx;
  background: #fff;
}
.growth-guide .th:first-child {
  background: #fff;
  z-index: 1;
  /*左上角单元格z-index，切记要设置，不然表格纵向横向滚动时会被该单元格右方或者下方的单元格遮挡*/
}
.growth-guide .th:nth-child(2),
.growth-guide .td:nth-child(2) {
  position: -webkit-sticky;
  position: sticky;
  left: 160rpx;
  background: #fff;
}
.growth-guide .th:nth-child(2) {
  background: #fff;
  z-index: 1;
  /*左上角单元格z-index，切记要设置，不然表格纵向横向滚动时会被该单元格右方或者下方的单元格遮挡*/
}
.growth-guide .growth-fixed {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  padding: 40rpx 0;
}
.growth-guide .growth-fixed .growth-btn {
  width: 60%;
  background: #f54e48;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 30rpx;
  color: #ffffff;
  border-radius: 33rpx;
  text-align: center;
}
